@model Factory.Models.Engineer

@{
    ViewData["Title"] = "Engineer Details";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">@Model.Name</h3>
                </div>
                <div class="card-body">
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Phone:</strong> @Model.Phone</p>
                    <p><strong>License ID:</strong> @Model.LicenseID</p>
                    @if (Model.Machines.Count > 0)
                    {
                        <p><strong>Machines:</strong></p>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var machine in Model.Machines)
                                {
                                    <tr>
                                        <td>@machine.Name</td>
                                        <td>@machine.Description</td>
                                        <td>
                                            <a asp-action="RemoveMachine" asp-route-engineerId="@Model.EngineerID" asp-route-machineId="@machine.MachineId" class="btn btn-danger">Remove Machine</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p>No machines licensed for this engineer.</p>
                    }
                </div>
                <div class="card-footer text-center">
                    <a asp-action="AddMachine" asp-route-engineerId="@Model.EngineerID" class="btn btn-primary mr-2">Add Machine</a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
